<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TweetSeek"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bird Identification App"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Welcome to the Homepage!"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp">

        <View
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@color/teal_700">
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/startIDButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Start Bird ID"
            android:backgroundTint="@color/green"
            android:layout_marginBottom="8dp"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/viewResultsButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="View Results"
            android:textColor="@color/green"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/grey"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/accountSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Account Settings"
            android:textColor="@color/green"
            android:backgroundTint="@color/grey"
            android:layout_marginBottom="5dp"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/black"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>