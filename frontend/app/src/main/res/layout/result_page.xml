<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/login_bg"

    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/birdImage"
        android:layout_width="372dp"
        android:layout_height="255dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:id="@+id/birdName"
        android:layout_width="@dimen/button_width_m"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="Bird: "
        android:textColor="@color/red"
        android:fontFamily="monospace"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/birdExpert"
        android:layout_width="@dimen/button_width_m"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin_between"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="identified by: "
        android:textColor="@color/blue"
        android:fontFamily="monospace"
        android:padding="10dp"
        />


    <Button
        android:id="@+id/shareButton"
        android:layout_width="@dimen/button_width_s"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/red"
        android:fontFamily="monospace"
        android:text="Share"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:cornerRadius="10dp" />

</LinearLayout>