<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/patternedblue_bg_"
    tools:context=".activity.RegisterActivity">

    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/check"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- ID Result -->
        <TextView
            android:id="@+id/birdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:padding="0dp"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/birdImage"
            android:layout_width="372dp"
            android:layout_height="255dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp" />

        <!-- Expert -->
        <TextView
            android:id="@+id/birdExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/birdFunFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:background="@color/white"
            android:padding="8dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:id="@+id/noButton"
                android:layout_width="@dimen/button_width_s"
                android:layout_height="65dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/yellow"
                android:fontFamily="monospace"
                android:text="no, not quite..."
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/yesButton"
                android:layout_width="@dimen/button_width_s"
                android:layout_height="65dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="monospace"
                android:text="Yes, this is correct!"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/uploadButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:gravity="center"
            android:src="@drawable/up_white"
            />
    </LinearLayout>
</RelativeLayout>